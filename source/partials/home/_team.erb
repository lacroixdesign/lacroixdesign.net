<%# Home > Team %>
<section class="s-team" id="team">
  <div class="b-section">
    <header>
      <h1 class="section-title">Team</h1>
    </header>
    <div class="l-constrained-medium">
      <div class="s-team__photos">
        <% [ find_team_member_by_name("Michael LaCroix"),
             find_team_member_by_name("James LaCroix") ].each_with_index do |member, index| %>
          <article id="<%= member.slug %>" class="will-animate <%= index == 0 ? 'fadeInLeft' : 'fadeInRight' %>" data-wow-duration="0.7s" data-wow-delay="0.2s">
            <a href="/team/<%= member.slug %>">
              <img src="<%= team_member_avatar_path(member) %>"
                   alt="<%= member.name %>"
                   class="image-circle pulse-grey-to-pink">
              <div class="overlay"><h2><%= member.name %></h2></div>
            </a>
          </article>
        <% end %>
      </div>
      <div class="s-team__stars will-animate fadeInUp" data-wow-duration="0.7s" data-wow-delay="0.2s">
        <img src="<%= image_path "chicago-stars.png" %>" alt="Chicago" class="image-fullwidth">
      </div>
      <h2 class="s-team__based">Proudly Based in Chicago</h2>
      <div class="s-team__about">
        <p>Operating out of the Wicker Park neighborhood and serving clients globally, we are a small team of two brothers who are passionate about helping our partners grow their business. We strategically create engaging user experiences &amp; functional products through a collaborative process with businesses large and small. We look forward to working with you on your next project.</p>
      </div>
      <div class="s-team__btn">
        <%= component "cta-button", id: "cta-team" %>
      </div>
    </div>
  </div>
</section>
